<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="56dp"
                android:layout_height="80dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/imageView"
                android:text="a"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/textViewNumItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mais"
                android:layout_toEndOf="@+id/imageView"
                android:text="Ãšltimo Adquirido: 20"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/buttonAdd"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="11dp"
                android:background="@drawable/ic_add_circle_black_24px"
                android:tint="@color/colorPrimary"
                android:layout_alignBottom="@+id/textViewNumItems"
                android:layout_toEndOf="@+id/textViewNumItems" />

            <ImageButton
                android:id="@+id/mais"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/ic_more_vert_black_36px"
                android:paddingRight="12dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>